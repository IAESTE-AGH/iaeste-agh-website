---
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<ul>
	<li>
		<a href={translatePath('#wymiana')}>
			{t('nav.exchange')}
		</a>
	</li>
	<li>
		<a href={translatePath('/dla-firm')}>
			{t('nav.forCompanies')}
		</a>
	</li>
	<li>
		<a href="#chuj">
			{t('nav.contact')}
		</a>
	</li>
</ul>
