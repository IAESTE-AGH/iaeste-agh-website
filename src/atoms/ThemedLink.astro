---
import type { TextVariant } from '@/types';
import ThemedText from './ThemedText.astro';

type Props = {
	href: string;
	children: string;
	asButton?: boolean;
	isBold?: boolean;
	variant?: TextVariant;
};

const { href, asButton = false, isBold, variant } = Astro.props;
---

<a href={href} class:list={[{ button: asButton }]}>
	<ThemedText variant={variant} isBold={isBold}>
		<slot />
	</ThemedText>
</a>
