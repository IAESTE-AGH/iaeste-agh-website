---
import {
    supportedLanguages,
    showDefaultLang,
    defaultLang,
    getLangFromUrl,
    useTranslations,
    routes,
} from '@/i18n';
import Layout from '@/layouts/Layout.astro';
import OpinionCard from '@/molecules/OpinionCard.astro';
import {
    OurValuesSection,
    PartnersSection,
    NewPlacesSection,
    LandingSection,
    TimelineSection,
} from '@/organisms';

export function getStaticPaths() {
    return supportedLanguages.map(language => {
        return {
            params: {
                lang:
                    !showDefaultLang && language.lang === defaultLang
                        ? undefined
                        : language.lang,
                companies: routes[language.lang].companies,
            },
        };
    });
}

const url = new URL(Astro.request.url);
const lang = getLangFromUrl(url);
const t = useTranslations(lang);
---

<Layout title={t('page.companies')}>
    <!-- można usunąć jak będzie coś więcej -->
    <LandingSection />
    <OpinionCard
        company="Valeo"
        comment="I had a great time working with IAESTE AGH. They helped me find an internship in a great company and I learned a lot."
        rating={3}
        imgPath="/src/assets/company-logos/example_logo.png"
    />
</Layout>
