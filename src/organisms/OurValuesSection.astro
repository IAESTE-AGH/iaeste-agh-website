---
import { ThemedSection, ThemedText } from '@/atoms';
import ValueCard from '../molecules/ValueCard.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const url = new URL(Astro.request.url);
const lang = getLangFromUrl(url);
const t = useTranslations(lang);

const values = [
    { title: t('values.trust'), imageSrc: '/krowa.jpg' },
    { title: t('values.growth'), imageSrc: '/krowa.jpg' },
    { title: t('values.commitment'), imageSrc: '/krowa.jpg' },
    { title: t('values.friendship'), imageSrc: '/krowa.jpg' },
    { title: t('values.diversity'), imageSrc: '/krowa.jpg' },
];
---

<ThemedSection title={t('section.ourValues')}>
    <div class="values-grid">
        {
            values.map(value => (
                <ValueCard title={value.title} imageSrc={value.imageSrc} />
            ))
        }
    </div>
</ThemedSection>

<style>
    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(16ch, 1fr));
        gap: var(--spacing-md);
    }

    /* Dla średnich ekranów - 2 kolumny, 3 wiersze */
    @media (max-width: 900px) {
        .values-grid {
            grid-template-columns: repeat(2, 1fr);
            justify-items: center;
        }
    }

    /* Dla mniejszych ekranów - 1 kolumna */
    @media (max-width: 600px) {
        .values-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
